<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearlayout_imageboxtop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:id="@+id/imageview_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"/>

        <ImageView
            android:id="@+id/imageview_image3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_imageboxbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_imageboxtop">

        <ImageView
            android:id="@+id/imageview_image4"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp" />

        <ImageView
            android:id="@+id/imageview_image5"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp" />
    </LinearLayout>




    <ImageView
        android:id="@+id/imageview_sending"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearlayout_imageboxtop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_uncheckcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="10dp"
        android:textColor="#FFA600"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearlayout_imageboxtop"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="10sp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linearlayout_imageboxbottom"/>


</androidx.constraintlayout.widget.ConstraintLayout>