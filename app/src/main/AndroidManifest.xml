        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="com.example.sns.SNS_Notification" /> <!-- 푸시알림을 눌러서 앱에 접근했을 때와 구분하기 위해서 만든 필터 -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".UploadVideoSecondActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD7t_2m-6ZE8blxYMdkTdBm_BU5VgULe7k" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <receiver
            android:name=".NotificationReceiver"
            android:exported="true" />

        <service
            android:name=".ChatIntentService"
            android:exported="false" />
        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
